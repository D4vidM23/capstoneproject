extends ../layout

block content

    div.content
        div.form-header1 Register
        div.dropdowns1
            a(href="/rocks").contact View Rocks
            a(href="service").customerservice Customer Service
            a(href="service").contact Contact



        div
            form(action='/register' method="POST")
                div.input-form-row
                    div.input-containter
                        label(for="first_name").form-label First Name
                        input(type="text" name="first_name" id="first_name" required=true).form-control
                    div.input-containter
                        label(for="last_name").form-label Last Name
                        input(type="text" name="last_name" id="last_name" required=true).form-control
                    div.input-containter.wide
                        label(for="email").form-label Email
                        input(type="text" name="email" id="email" required=true)

                    div.input-containter
                        label(for="password").form-label Password
                        input(type="text" name="password" id="password" required=true)
                        div.helper-text Must be 8-20 characters long

                    div.input-containter
                        label(for="role").form-label Role
                        select(id="role" name="role")
                            each role in roles
                                option(value=role.id) #{role.name}




                    button.gobackbutton(type="submit") Register



