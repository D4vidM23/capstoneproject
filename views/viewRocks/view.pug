extends ../layout

block content
    each rock in rocks
        img.product(src=rock.image)

        div.title2= rock.product_name
        div.seller1 Brand/Seller:
            div.seller2= rock.creator_name
        div.sign $
            div.theprice= rock.price
                div.dot .
                    div.theprice2= rock.price_cents
                        div.perton per ton
        div.desc Description:
        div.desc1
            div.desc2= rock.description

        a.goback2(href="/rocks")
            button.gobackbutton Go Back